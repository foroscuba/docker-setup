[mysqld]
# ===========================================
# NUMA & Memory Optimization
# ===========================================
# Disable NUMA interleave - keep memory on local node
innodb_numa_interleave = OFF

# Buffer pool: 8GB for 5GB database (entire DB in RAM)
innodb_buffer_pool_size = 8G
innodb_buffer_pool_instances = 8

# Load buffer pool on startup for instant performance
innodb_buffer_pool_load_at_startup = ON
innodb_buffer_pool_dump_at_shutdown = ON
innodb_buffer_pool_dump_pct = 100

# ===========================================
# I/O & Persistence (relaxed for performance)
# ===========================================
# Flush every second, not every commit (may lose 1 sec on crash)
innodb_flush_log_at_trx_commit = 2
sync_binlog = 0
innodb_flush_method = O_DIRECT
innodb_doublewrite = OFF

# Redo log - larger = fewer checkpoints
innodb_log_file_size = 1G
innodb_log_buffer_size = 256M

# ===========================================
# Read Optimization (XenForo is read-heavy)
# ===========================================
innodb_read_io_threads = 8
innodb_write_io_threads = 4
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000

# Adaptive hash index for faster lookups
innodb_adaptive_hash_index = ON

# ===========================================
# Connections & Threads
# ===========================================
max_connections = 200
thread_cache_size = 50
thread_handling = pool-of-threads
thread_pool_size = 8

# ===========================================
# Temp Tables & Sorting (all in RAM)
# ===========================================
tmp_table_size = 512M
max_heap_table_size = 512M
sort_buffer_size = 4M
join_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 2M

# ===========================================
# Table & Query Cache
# ===========================================
table_open_cache = 4000
table_definition_cache = 2000

# ===========================================
# Disable unnecessary features
# ===========================================
performance_schema = OFF
skip_name_resolve = ON
