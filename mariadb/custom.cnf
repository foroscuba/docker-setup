[mysqld]
# Storage engine
default_storage_engine = InnoDB
innodb_file_per_table = 1

# Buffer pool: 8GB for 5GB database
innodb_buffer_pool_size = 8G
innodb_buffer_pool_load_at_startup = ON
innodb_buffer_pool_dump_at_shutdown = ON

# Transaction logging (2 = flush every second)
innodb_flush_log_at_trx_commit = 2

# Log file size
innodb_log_file_size = 512M
innodb_log_buffer_size = 64M

# SSD optimizations
innodb_read_io_threads = 64
innodb_write_io_threads = 64
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_flush_neighbors = 0

# Temp tables in RAM (for complex queries)
tmp_table_size = 256M
max_heap_table_size = 256M

# Buffers for sorting/joining
sort_buffer_size = 4M
join_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 2M

# Table cache
table_open_cache = 4000
table_definition_cache = 2000

# Thread cache
thread_cache_size = 100

# Character set (required for XenForo)
character-set-server = utf8mb4
collation-server = utf8mb4_general_ci

# Connections
max_connections = 100

# Skip DNS lookups
skip_name_resolve = ON

# Disable performance schema (saves RAM)
performance_schema = OFF
